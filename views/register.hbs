    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script>

        var buddyId = 2;
        var userId;
        var UserName;
        var UserEmail;

        console.log(UserName);



        function getUser(id, cb) {
            $.get("api/users/" + id).
                then(function (data) {
                    console.log(data);
                    cb(data)
                });
        }


        function addUser(cb) {
            var newUser = {
                name: UserName,
                password: 0,
                username: UserEmail,
                weight: weight,
                height: height,
                buddyId: buddyId
            };
            console.log(newUser);

            $.post("/api/users/", newUser)
                .then(function (data) {
                    console.log(data);
                    console.log(data.id);
                    userId = data.id;
                    console.log(userId);
                    cb();

                });
        }


        function addProfilePic() {
            console.log(userId);
            var user = new FormData();
            var name = UserName;
            var image = $("#image").prop("files")[0];
            console.log(name);
            console.log(image);
            console.log(userId);
            user.append("name", name);
            user.append("file", image);
            user.append("UserId", userId);

            $("#image").val("");
            $("#name").val("");
            $.ajax({
                type: "POST",
                url: "/api/users/survey",
                processData: false,
                contentType: false,
                dataType: "json",
                data: user,
                success: function (response, textStatus, jqXHR) {
                    if (response === null) {
                        alert("Error.");
                    } else {
                        console.log("post back");
                    }
                }
            });
            // $('.modal').modal();
            // $('#modal1').modal('open');
            // $('.trigger-modal').modal();
        }


        $('#submitmodal').click(function (e) {
            e.preventDefault();
            UserName = $("#firstname").val() + " " + $("#lastname").val();
            UserEmail = $("#email").val();
            weight = parseInt($("#weight").val());
            height = parseInt($("#height").val());

            addUser(function () {
     
                setTimeout(addProfilePic(), 5000);
            });
            // addUser();
            $('.modal').modal();
            $('#modal1').modal('open');
            $('.trigger-modal').modal();

        });
        $(".btn-accept").click(function (e) {
            $("#okta-info").submit();
        })
    </script>
